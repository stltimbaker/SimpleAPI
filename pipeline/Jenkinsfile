pipeline {
    agent { label 'MSBUILD22' }
    options {
        buildDiscarder(logRotator(numToKeepStr: '05'))
    }
    environment {
        MY_VARIABLE = 'This is Tims Variable'
    }
    
    stages {
        stage('Intro') {
            environment {
                STAGE_1_VARIABLE = 'Hello Stage 1!'
            }
            parallel {
                stage('step-1') {
                    steps {
                        echo "dotNet Info" 
                        echo "==========="
                        bat 'dotnet --version'
                        bat 'dotnet --list-sdks'
                    }
                }
                stage('step-2') {
                    steps {
                        echo "In stage First, step-2"
                    }
                }
            }
        }
        stage('Build') {
            steps {
                echo "Build Starting..."

                bat "dir"
                bat "cd SimpleAPI"
                bat "dir"

                bat "dotnet build"

                bat "dir"

                echo "Build Finished!"
            }
        }

        stage('Artifacts') {
            steps {
                echo "Creating Artifacts..."

                bat "dir"
                bat "cd SimpleAPI"
                bat "dir"
                bat "cd bin"
                bat "dir"
                bat "cd Debug"
                bat "dir"
                bat "cd net6.0"
                bat "dir"

                echo "Artifacts Created!"
            }
        }
    }
}
