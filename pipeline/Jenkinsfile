pipeline {
    agent { label 'MSBUILD22' }
    environment {
        MY_VARIABLE = 'This is Tims Variable'
    }
    
    stages {
        stage('First') {
            environment {
                STAGE_1_VARIABLE = 'Hello Stage 1!'
            }
            parallel {
                stage('step-1') {
                    steps {
                        echo "In stage First, step-1"
                    }
                }
                stage('step-2') {
                    steps {
                        echo "In stage First, step-2"
                    }
                }
            }
        }
        stage('Build') {
            steps {
                echo "Build Starting..."
                sh """
                pwd
                ls 
                cd SimpleAPI
                ls
                dotnet build """
                echo "Build Finished!"
            }
        }
    }
}
